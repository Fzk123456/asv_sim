<sdf version='1.6'>
  <model name='wing_sail'>
    <pose>0 0 0 0 0 0</pose>
    <static>false</static>

    <!-- Joystick teleop -->
    <!-- <plugin name="sail_controller" filename="libLinkJointControllerPlugin.so">
      <input_topic>/cmd_vel2</input_topic>
      <link_name>__default__</link_name>
      <link_scale>0</link_scale>
      <link_type>velocity</link_type>
      <link_pid>1000 0 10</link_pid>
      <joint_name>wing_sail_joint</joint_name>
      <joint_scale>0.01</joint_scale>
      <joint_type>position</joint_type>
      <joint_pid>2000 0 10</joint_pid>
    </plugin>
 -->
    <!-- Keyboard teleop  -->
    <plugin name="trim_tab_joint_controller" filename="libKeysToJointsPlugin.so">
      <!-- keycode 56 = '8' -->
      <map
        key="56"
        joint="trim_tab_joint"
        scale="0.05"
        type="position"
        kp="1000"
        ki="0"
        kd="10"
      />
      <!-- keycode 50 = '2' -->
      <map
        key="50"
        joint="trim_tab_joint"
        scale="-0.05"
        type="position"
        kp="1000"
        ki="0"
        kd="10"
      />
    </plugin>

    <plugin name="wing_sail_liftdrag" filename="libSailLiftDragPlugin.so">
      <a0>0.0</a0>
      <alpha_stall>0.7854</alpha_stall>
      <cla>1.2732</cla>
      <cla_stall>-1.2732</cla_stall>
      <cda>0.6366</cda>
      <area>1.0</area>
      <fluid_density>1.2</fluid_density>
      <forward>1 0 0</forward>
      <upward>0 1 0</upward>
      <cp>0 0 0</cp>
      <link_name>base_link</link_name>
      <radial_symmetry>true</radial_symmetry>
    </plugin>

    <plugin name="trim_tab_liftdrag" filename="libSailLiftDragPlugin.so">
      <a0>0.0</a0>
      <alpha_stall>0.7854</alpha_stall>
      <cla>1.2732</cla>
      <cla_stall>-1.2732</cla_stall>
      <cda>0.6366</cda>
      <area>1.0</area>
      <fluid_density>1.2</fluid_density>
      <forward>1 0 0</forward>
      <upward>0 1 0</upward>
      <cp>0 0 0</cp>
      <link_name>trim_tab_link</link_name>
      <radial_symmetry>true</radial_symmetry>
    </plugin>

    <!-- Wing sail -->
    <link name="base_link">
      <pose>0 0 2.5 0 0 0</pose>
      <visual name="sail_visual">
        <geometry>
          <box>
            <size>1 0.01 5</size>
          </box>
        </geometry>
        <material>
          <script>
            <name>Gazebo/Gray</name>
          </script>
        </material>
      </visual>
      <collision name="sail_collision">
        <geometry>
          <box>
            <size>1 0.01 5</size>
          </box>
        </geometry>
      </collision>

      <visual name="trim_tab_support_visual">
        <pose>0 0 0 0 1.570796 0</pose>
        <geometry>
          <cylinder>
            <radius>0.02</radius>
            <length>4</length>
          </cylinder>
        </geometry>
        <material>
          <script>
            <name>Gazebo/Gray</name>
          </script>
        </material>
      </visual>

      <inertial>
        <pose>0 0 0 0 0 0</pose>
        <mass>10</mass>
        <inertia>
          <ixx>1.6</ixx>
          <ixy>0</ixy>
          <iyy>1.6</iyy>
          <iyz>0</iyz>
          <izz>1.6</izz>
        </inertia>
      </inertial>

      <!-- Sensors -->
      <sensor name="anemometer_sensor" type="anemometer">
        <pose>0 0 0 0 0 0</pose>
        <always_on>true</always_on>
        <update_rate>50</update_rate>
        <topic>anemometer</topic>
      </sensor>
      <visual name="anemometer_visual">
        <pose>0 0 0 0 0 0</pose>
        <geometry>
          <cylinder>
            <radius>0.025</radius>
            <length>0.025</length>
          </cylinder>
        </geometry>
        <material>
          <script>
            <name>Gazebo/Red</name>
          </script>
        </material>
      </visual>
    </link>

    <joint type="revolute" name="wing_sail_joint">
      <pose>0 0 0 0 0 0</pose>
      <child>base_link</child>
      <parent>world</parent>
      <axis>
        <xyz>0 0 1</xyz>
        <initial_position>0</initial_position>
        <limit>
          <lower>-1.5</lower>
          <upper>1.5</upper>
        </limit>
      </axis>
      <sensor name="wing_sail_force_torque" type="force_torque">
        <always_on>true</always_on>
        <update_rate>30</update_rate>
        <visualize>true</visualize>
      </sensor>
    </joint>

    <!-- Trim tab -->
    <link name="trim_tab_link">
      <pose>-2.05 0 2.5 0 0 0</pose>

      <visual name="trim_tab_visual">
        <geometry>
          <box>
            <size>0.1 0.01 0.5</size>
          </box>
        </geometry>
        <material>
          <script>
            <name>Gazebo/Gray</name>
          </script>
        </material>
      </visual>

      <collision name="trim_tab_collision">
        <geometry>
          <box>
            <size>0.1 0.01 0.5</size>
          </box>
        </geometry>
      </collision>

      <inertial>
        <pose>0 0 0 0 0 0</pose>
        <mass>1</mass>
        <inertia>
          <ixx>0.16</ixx>
          <ixy>0</ixy>
          <iyy>0.16</iyy>
          <iyz>0</iyz>
          <izz>0.16</izz>
        </inertia>
      </inertial>

    </link>

    <joint type="revolute" name="trim_tab_joint">
      <pose>0.05 0 0 0 0 0</pose>
      <child>trim_tab_link</child>
      <parent>base_link</parent>
      <axis>
        <xyz>0 0 1</xyz>
        <initial_position>0</initial_position>
        <limit>
          <lower>-1.5</lower>
          <upper>1.5</upper>
        </limit>
      </axis>
      <sensor name="trim_tab_force_torque" type="force_torque">
        <always_on>true</always_on>
        <update_rate>30</update_rate>
        <visualize>true</visualize>
      </sensor>
    </joint>

  </model>
</sdf>

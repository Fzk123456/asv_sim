<sdf version="1.6">
  <world name="sail_demo">
    
    <!-- GUI -->
    <gui>
      <plugin name="keyboard_gui_plugin" filename="libKeyboardGUIPlugin.so"/>
    </gui>

    <!-- Wind -->
    <wind>
      <linear_velocity>-10 0 0</linear_velocity>
    </wind>

    <!-- Lights -->
    <include>
      <uri>model://sun</uri>
    </include>

    <!-- World models  -->
    <include>
      <uri>model://ground_plane</uri>
    </include>

    <!-- Test model  -->
    <model name="sail">
      <pose>0 0 2.5 0 0 0</pose>
      <static>false</static>
      <enable_wind>true</enable_wind>

      <!-- keycode 56 = '8' -->
      <plugin name="joint_controller" filename="libKeysToJointsPlugin.so">
        <map
          key="56"
          joint="base_joint"
          scale="0.05"
          type="position"
          kp="1000"
          ki="0"
          kd="10"
        />
        <!-- keycode 50 = '2' -->
        <map
          key="50"
          joint="base_joint"
          scale="-0.05"
          type="position"
          kp="1000"
          ki="0"
          kd="10"
        />
      </plugin>

      <plugin name="liftdrag" filename="libSailLiftDragPlugin.so">
        <a0>0.0</a0>
        <alpha_stall>0.7854</alpha_stall>
        <cla>1.2732</cla>
        <cla_stall>-1.2732</cla_stall>
        <cda>0.6366</cda>
        <area>5.0</area>
        <fluid_density>1.2</fluid_density>
        <forward>1 0 0</forward>
        <upward>0 1 0</upward>
        <cp>0 0 0</cp>
        <link_name>base_link</link_name>
        <radial_symmetry>true</radial_symmetry>
      </plugin>

      <link name="base_link">
        <pose>0 0 0 0 0 0</pose>
        <visual name="base_visual">
          <geometry>
            <box>
              <size>1 0.01 5</size>
            </box>
          </geometry>
          <material>
            <script>
              <name>Gazebo/Gray</name>
            </script>
          </material>
        </visual>
        <collision name="base_collision">
          <geometry>
            <box>
              <size>1 0.01 5</size>
            </box>
          </geometry>
        </collision>
        <inertial>
          <pose>0 0 0 0 0 0</pose>
          <mass>10</mass>
          <inertia>
            <ixx>1.6</ixx>
            <ixy>0</ixy>
            <iyy>1.6</iyy>
            <iyz>0</iyz>
            <izz>1.6</izz>
          </inertia>
        </inertial>

        <!-- Sensors -->
        <sensor name="anemometer_sensor" type="anemometer">
          <pose>0 0 0 0 0 0</pose>
          <always_on>true</always_on>
          <update_rate>50</update_rate>
          <topic>anemometer</topic>
        </sensor>
        <visual name="anemometer_visual">
          <pose>0 0 0 0 0 0</pose>
          <geometry>
            <cylinder>
              <radius>0.025</radius>
              <length>0.025</length>
            </cylinder>
          </geometry>
          <material>
            <script>
              <name>Gazebo/Red</name>
            </script>
          </material>
        </visual>


      </link>

      <joint type="revolute" name="base_joint">
        <pose>0 0 0 0 0 0</pose>
        <child>base_link</child>
        <parent>world</parent>
        <axis>
          <xyz>0 0 1</xyz>
          <initial_position>0</initial_position>
          <limit>
            <lower>-3.14159265</lower>
            <upper>3.14159265</upper>
          </limit>
        </axis>
        <sensor name="force_torque_sensor" type="force_torque">
          <always_on>true</always_on>
          <update_rate>30</update_rate>
          <visualize>true</visualize>
        </sensor>
      </joint>
    </model>

  </world>
</sdf>
